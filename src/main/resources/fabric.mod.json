{
  "schemaVersion": 1,
  "id"           : "megane",
  "version"      : "${version}",
  "name"         : "megane",
  "description"  : "a WAILA/HWYLA plugin that shows more detailed information such as energy, fluids, items, etc.",
  "authors"      : ["deirn"],
  "contact"      : {
    "homepage": "https://github.com/badasintended/megane",
    "sources" : "https://github.com/badasintended/megane",
    "issues"  : "https://github.com/badasintended/megane/issues"
  },
  "license"      : "MIT",
  "icon"         : "assets/megane/icon.png",
  "environment"  : "*",
  "entrypoints"  : {
    "main": ["badasintended.megane.Megane"]
  },
  "mixins"       : [
    "megane.mixins.json"
  ],
  "depends"      : {
    "fabricloader": ">=0.7.4",
    "fabric"      : "*",
    "minecraft"   : "1.16.x",
    "waila"       : "*"
  },
  "custom"       : {
    "waila:plugins": {
      "id"         : "megane:plugin",
      "initializer": "badasintended.megane.Megane"
    }
  }
}
